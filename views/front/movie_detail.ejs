<% layout('layouts/main') %>

<% if (ads.top) { %>
  <div class="mb-3">
    <div class="ad-slot">
      <%- ads.top %>
    </div>
  </div>
<% } %>

<div class="grid lg:grid-cols-[3fr,1.1fr] gap-4">
  <article class="glass-card rounded-xl overflow-hidden">
    <div class="grid md:grid-cols-[1fr,2fr] gap-0">
      <div class="relative bg-slate-900">
        <div class="aspect-[2/3] md:h-full">
          <% if (movie.poster_path) { %>
            <img src="https://image.tmdb.org/t/p/w342<%= movie.poster_path %>"
                 class="w-full h-full object-cover" />
          <% } else { %>
            <div class="w-full h-full flex items-center justify-center text-xs text-slate-500">
              No poster
            </div>
          <% } %>
        </div>
      </div>
      <div class="p-4 md:p-5">
        <h1 class="text-xl font-bold mb-1"><%= movie.title %></h1>
        <div class="flex flex-wrap items-center gap-2 text-[11px] text-slate-400 mb-2">
          <span>Release: <%= movie.release_date %></span>
          <span class="w-[1px] h-3 bg-slate-500"></span>
          <span>Runtime: <%= movie.runtime %> min</span>
          <span class="w-[1px] h-3 bg-slate-500"></span>
          <span>Rating: ★ <%= movie.vote_average.toFixed(1) %></span>
        </div>
        <p class="text-xs text-slate-200 mb-3">
          <%= movie.overview %>
        </p>
        <div class="text-[11px] text-slate-400 mb-3">
          Genres:
          <% movie.genres.forEach((g, idx) => { %>
            <%= g.name %><%= idx < movie.genres.length - 1 ? ', ' : '' %>
          <% }) %>
        </div>

        <% if (movie.videos && movie.videos.results && movie.videos.results.length) { %>
          <% const trailer = movie.videos.results.find(v => v.type === 'Trailer' && v.site === 'YouTube') || movie.videos.results[0]; %>
          <% if (trailer) { %>
            <div class="mt-3">
              <div class="text-xs font-semibold mb-1">Trailer</div>
              <div class="aspect-video rounded-lg overflow-hidden bg-black border border-slate-800">
                <iframe
                  src="https://www.youtube.com/embed/<%= trailer.key %>"
                  class="w-full h-full"
                  frameborder="0"
                  allowfullscreen
                ></iframe>
              </div>
            </div>
          <% } %>
        <% } %>
      </div>
    </div>
  </article>

  <aside class="space-y-4">
    <% if (ads.sidebar) { %>
      <div class="glass-card rounded-xl p-3">
        <div class="ad-slot">
          <%- ads.sidebar %>
        </div>
      </div>
    <% } %>

    <% if (movie.similar && movie.similar.results && movie.similar.results.length) { %>
      <section class="glass-card rounded-xl p-3">
        <h2 class="text-sm font-semibold mb-2">Similar Movies</h2>
        <div class="grid grid-cols-2 gap-2 text-[11px]">
          <% movie.similar.results.slice(0,8).forEach(m => { %>
            <a href="/movie/<%= m.id %>" class="flex gap-2">
              <div class="w-[46px] aspect-[2/3] rounded bg-slate-900 overflow-hidden border border-slate-800">
                <% if (m.poster_path) { %>
                  <img src="https://image.tmdb.org/t/p/w185<%= m.poster_path %>"
                       class="w-full h-full object-cover" />
                <% } else { %>
                  <div class="w-full h-full flex items-center justify-center text-[9px] text-slate-500">
                    No image
                  </div>
                <% } %>
              </div>
              <div class="flex-1">
                <div class="font-semibold line-clamp-2"><%= m.title %></div>
                <div class="text-[10px] text-slate-400">
                  <%= (m.release_date || '').slice(0,4) %> · ★ <%= (m.vote_average || 0).toFixed(1) %>
                </div>
              </div>
            </a>
          <% }) %>
        </div>
      </section>
    <% } %>
  </aside>
</div>

<% if (ads.incontent) { %>
  <div class="mt-4 glass-card rounded-xl p-3">
    <div class="ad-slot">
      <%- ads.incontent %>
    </div>
  </div>
<% } %>
